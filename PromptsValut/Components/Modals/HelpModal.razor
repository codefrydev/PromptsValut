@using PromptsValut.Constants

<div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm" style="display: @(IsVisible ? "flex" : "none")">
    <div class="bg-card border border-border rounded-xl shadow-2xl w-full max-w-4xl max-h-[90vh] flex flex-col">
        <!-- Header -->
        <div class="flex items-center justify-between p-6 border-b border-border">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-violet-600 rounded-lg flex items-center justify-center">
                    <img src="favicon-32x32.png" alt="PromptVault" class="w-6 h-6" />
                </div>
                <div>
                    <h2 class="text-xl font-semibold text-foreground">Help & Guide</h2>
                    <p class="text-sm text-muted-foreground">Learn how to use PromptVault effectively</p>
                </div>
            </div>
            <button @onclick="CloseModal" class="p-2 rounded-md hover:bg-muted transition-colors">
                @((MarkupString)SvgIcons.X.Replace("h-4 w-4", "h-5 w-5"))
            </button>
        </div>
        
        <!-- Tab Navigation -->
        <div class="px-6 py-4">
            <div class="flex items-center space-x-1 bg-muted rounded-lg p-1 overflow-x-auto">
                <button @onclick="() => SetActiveTab(0)" class="flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors whitespace-nowrap @(activeTab == 0 ? "bg-card text-foreground shadow-sm" : "text-muted-foreground hover:text-foreground")" title="Getting Started">
                    @((MarkupString)SvgIcons.PlayCircle)
                    <span class="ml-2">Quick Start</span>
                </button>
                <button @onclick="() => SetActiveTab(1)" class="flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors whitespace-nowrap @(activeTab == 1 ? "bg-card text-foreground shadow-sm" : "text-muted-foreground hover:text-foreground")" title="Browse & Search">
                    @((MarkupString)SvgIcons.Search)
                    <span class="ml-2">Browse</span>
                </button>
                <button @onclick="() => SetActiveTab(2)" class="flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors whitespace-nowrap @(activeTab == 2 ? "bg-card text-foreground shadow-sm" : "text-muted-foreground hover:text-foreground")" title="Create & Manage">
                    @((MarkupString)SvgIcons.Plus)
                    <span class="ml-2">Create</span>
                </button>
            </div>
        </div>
        
        <!-- Content Area -->
        <div class="flex-1 overflow-y-auto p-6 tab-content">
            @if (activeTab == 0)
            {
                <!-- Quick Start Tab -->
                <div class="space-y-6">
                    <!-- Welcome Section -->
                    <div class="text-center mb-8">
                        <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-violet-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                            <img src="favicon-32x32.png" alt="PromptVault" class="w-10 h-10" />
                        </div>
                        <h3 class="text-2xl font-bold text-foreground mb-2">Welcome to PromptVault!</h3>
                        <p class="text-muted-foreground max-w-2xl mx-auto">Your personal AI prompt library designed to help you get better results from ChatGPT, Claude, and other AI tools.</p>
                    </div>

                    <!-- Getting Started Steps -->
                    <div class="space-y-4">
                        <div class="flex items-start gap-4 p-4 bg-muted/50 rounded-lg">
                            <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">1</div>
                            <div>
                                <h4 class="font-semibold text-foreground mb-1">Browse Prompts</h4>
                                <p class="text-sm text-muted-foreground">Use the search bar to find prompts by title, content, or tags. Filter by categories to narrow down your search.</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start gap-4 p-4 bg-muted/50 rounded-lg">
                            <div class="w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">2</div>
                            <div>
                                <h4 class="font-semibold text-foreground mb-1">Click to Use</h4>
                                <p class="text-sm text-muted-foreground">Click on any prompt card to view details and copy the prompt text to use in your AI tool.</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start gap-4 p-4 bg-muted/50 rounded-lg">
                            <div class="w-8 h-8 bg-purple-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">3</div>
                            <div>
                                <h4 class="font-semibold text-foreground mb-1">Mark Favorites</h4>
                                <p class="text-sm text-muted-foreground">Click the heart icon to add prompts to your favorites for quick access later.</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (activeTab == 1)
            {
                <!-- Browse Tab -->
                <div class="space-y-6">
                    <h3 class="text-xl font-semibold text-foreground">Browse & Search Prompts</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="p-4 bg-muted/50 rounded-lg">
                            <h4 class="font-semibold text-foreground mb-2 flex items-center gap-2">
                                @((MarkupString)SvgIcons.Search.Replace("h-4 w-4", "h-5 w-5"))
                                Search Functionality
                            </h4>
                            <p class="text-sm text-muted-foreground mb-3">Search across prompt titles, content, descriptions, and tags.</p>
                            <ul class="text-sm text-muted-foreground space-y-1">
                                <li>• Type keywords in the search bar</li>
                                <li>• Search is case-insensitive</li>
                                <li>• Results update in real-time</li>
                            </ul>
                        </div>
                        
                    </div>
                </div>
            }
            else if (activeTab == 2)
            {
                <!-- Create Tab -->
                <div class="space-y-6">
                    <h3 class="text-xl font-semibold text-foreground">Create & Manage Prompts</h3>
                    
                    <div class="space-y-4">
                        <div class="p-4 bg-muted/50 rounded-lg">
                            <h4 class="font-semibold text-foreground mb-2 flex items-center gap-2">
                                @((MarkupString)SvgIcons.Plus.Replace("h-4 w-4", "h-5 w-5"))
                                Creating New Prompts
                            </h4>
                            <p class="text-sm text-muted-foreground mb-3">Add your own custom prompts to the library.</p>
                            <ul class="text-sm text-muted-foreground space-y-1">
                                <li>• Click the "Create" button</li>
                                <li>• Fill in title, description, and content</li>
                                <li>• Select appropriate category</li>
                                <li>• Add tags for better organization</li>
                            </ul>
                        </div>
                        
                        <div class="p-4 bg-muted/50 rounded-lg">
                            <h4 class="font-semibold text-foreground mb-2 flex items-center gap-2">
                                @((MarkupString)SvgIcons.Heart.Replace("h-4 w-4", "h-5 w-5"))
                                Managing Favorites
                            </h4>
                            <p class="text-sm text-muted-foreground mb-3">Keep track of your most useful prompts.</p>
                            <ul class="text-sm text-muted-foreground space-y-1">
                                <li>• Click the heart icon to favorite/unfavorite</li>
                                <li>• View all favorites in the favorites modal</li>
                                <li>• Favorites are saved locally</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Footer -->
        <div class="flex items-center justify-end gap-3 p-6 border-t border-border">
            <button @onclick="CloseModal" class="btn-primary px-4 py-2 flex items-center gap-2">
                @((MarkupString)SvgIcons.CheckCircle.Replace("h-4 w-4", "h-4 w-4"))
                Got it!
            </button>
        </div>
    </div>
</div>