@using PromptsValut.Constants

<button 
    @onclick="ToggleTheme"
    class="p-2 rounded-lg hover:bg-accent hover:text-accent-foreground transition-all duration-200 focus-ring @(IsMobile ? "flex items-center gap-2 lg:hidden" : "hidden lg:flex")"
    aria-label="@(PromptService.State.Theme == "light" ? "Switch to dark mode" : "Switch to light mode")"
    title="@(PromptService.State.Theme == "light" ? "Switch to dark mode" : "Switch to light mode")">
    @if (PromptService.State.Theme == "light")
    {
        @((MarkupString)SvgIcons.GetIcon("moon", "h-5 w-5"))
    }
    else
    {
        @((MarkupString)SvgIcons.GetIcon("sun", "h-5 w-5"))
    }
    @if (IsMobile)
    {
        <span class="text-sm">@(PromptService.State.Theme == "light" ? "Dark" : "Light")</span>
    }
</button>

